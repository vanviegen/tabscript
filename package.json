{
    "name": "tabscript",
    "version": "0.1.1",
    "description": "Modern TypeScript without the {(noise;)} but with reactivity.",
    "main": "dist-min/tabscript.js",
    "files": [
        "bin",
        "dist",
        "dist-min",
        "src"
    ],
    "exports": {
        ".": {
            "bun": "./src/tabscript.ts",
            "default": "./dist-min/tabscript.js",
            "development": "./dist/tabscript.js",
            "types`": "./dist/tabscript.d.ts"
        },
        "./browser": {
            "default": "./dist-min/browser.js",
            "development": "./dist/browser.js",
            "types`": "./dist/browser.d.ts"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "rm -rf dist dist-min ; tsc --target es2023 --module nodenext --moduleResolution nodenext --declaration --sourceMap --outDir dist src/*.ts && chmod a+x dist/cli.js && mkdir -p dist-min && for f in dist/*.js; do terser --module --mangle module --keep-fnames --source-map -o dist-min/$(basename $f) -- $f; done && cp dist/*.d.ts dist-min",
        "test": "npm run test1 && npm run test2 && npm run test3 && echo OK",
        "test1": "./dist/cli.js tests/test.tab --output /dev/stdout | diff -u tests/test.ts -",
        "test2": "./dist/cli.js tests/test.tab --strip-types --output /dev/stdout | diff -u tests/test.js -",
        "test3": "./dist/cli.js tests/error.tab --recover --output /dev/stdout 2> /dev/null | diff -u tests/error.ts -",
        "prepack": "npm run build && npm run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vanviegen/tabscript.git"
    },
    "bin": "dist/cli.js",
    "keywords": [
        "typescript",
        "javascript",
        "transpile",
        "convert",
        "browser"
    ],
    "author": "Frank van Viegen",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/vanviegen/tabscript/issues"
    },
    "homepage": "https://github.com/vanviegen/tabscript#readme",
    "devDependencies": {
        "@types/node": "^24.10.0",
        "terser": "^5.39.0",
        "typescript": "^5.8.3"
    },
    "type": "module",
    "types": "dist-min/aberdeen.d.ts"
}
