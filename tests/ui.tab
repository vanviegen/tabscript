tabscript 1.0 ui=A
A := {} as any

# Test basic element
:div

# Test element with class
:main.my-class

# Test element with multiple classes
:div.row.active

# Test attributes
:input type=text placeholder="Enter text"

# Test properties
x := 3
:input value@ x

# Test styles
:div color:red

# Test hyphenated style
:div margin-top:10px

# Test combined
array := [1, 2, 3]
size := 12
:div.row margin-top:${size * 2}px
	:input type=text value@x placeholder="Enter text"
	:button color:red "Submit"

# Test empty tag with text
variable := "world"
:"Some text ${variable} more text"

# Test empty tag with block
:
	console.log& "do reactive things"

# Test property-only class
:.some-class

# Test property-only style
:.another-class fontSize:32

# Test in loop
for item: of array
	:div.row
		:span `Item #${item.id}: ${item.name}`
	
# Test nested tags on same line
:div span "Text"

# Test multiple attributes and styles
:input type=text name=username placeholder="Your name" color:blue fontSize:14px

:input value@true placeholder=`Test${42}`

tag := "d"+"iv"
:${tag} `T${'e'+'x'}t`

:div span b "Hi mom"

:div span b
	:"Hi dad"

# Stress tests - special characters in text
:div "Text with \"quotes\" and 'apostrophes'"

# Special characters in attribute values
:input placeholder="Enter \"quoted\" text"

# Attribute with spaces in value
:div title="This is a title"

# Multiple properties on chained tags
:div.container color:red span fontSize:12px "Nested text"

# Complex expression in attribute
y := 123
:input value@ x + y * 2

# Empty string attribute
:input placeholder=""

# Tag with only classes, no text
:div.header.active

# Very long hyphenated class and style
:div.my-very-long-class-name-here margin-top:10px padding-left:20px

# Unicode in text content
:div "Hello ‰∏ñÁïå üåç"

# Backticks and special chars in text
:span "Use `<code>` :span $here"

# Single quote in attribute value
:input placeholder='Enter text'

# Number in text with interpolation
count := 5
:span `Count: ${count}`

# Multiple inline nested with classes
:div.outer span.inner b.bold "Text"

# Chained tags with attributes
:div id=main span class=text "Content"

# Apply class and style on parent element
:.item color:blue

# Tag followed by complex nested structure
:div
	:span.label "Label:"
	val := 123
	:input type=text value@val

# Mixed inline and block children
:div span "Inline"
:div
	:span "Block child"

# Combining features
something := true
:div
	if something
		:.myclass
	:id = test
	:data-value = ${"x " + "y"}
	:data-value2 @ "x " + "y"
	:click@ ||
		console.log& "Clicked"
	:destroy@ ||
		console.log& "Destroyed"
	x := 42
	:value @ x
